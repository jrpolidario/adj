<script>
  LiveRecord.helpers.loadRecords({modelName: 'Player'})
  LiveRecord.Model.all.Player.subscribe();
</script>
<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Score</th>
      <th>Name</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr data-live-record-destroy-from='Player-<%= player.id %>'>
        <td data-live-record-update-from='Player-<%= player.id %>-score'><%= player.score %></td>
        <td data-live-record-update-from='Player-<%= player.id %>-name'><%= player.name %></td>
        <td data-live-record-update-from='Player-<%= player.id %>-game'><%= player.game %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path %>